@using BitBookMvcApp.Models
@model FamilyMember
@{
    var relationships = (List<FamilyRelationship>)Session["FamilyRelationship"];
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        @Html.Hidden("Id", Model.Id)
        @Html.Hidden("UserId", Model.UserId)

        <div class="form-group">
            @Html.Label("FamilyMember", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FamilyMemberId", String.Empty)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Relationship", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RelationshipId", new SelectList(relationships, "Id", "RelationshipName", Model.RelationshipId))
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Cancel", "Index")
</div>
