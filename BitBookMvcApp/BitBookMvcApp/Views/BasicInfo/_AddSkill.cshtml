@model BitBookMvcApp.Models.ProfessionalSkill

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model=> model.Id)
        @Html.HiddenFor(model=> model.UserId)

        <div class="form-group">
            @Html.LabelFor(model => model.Skill, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Skill, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Skill)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Cancel", "Index")
</div>
