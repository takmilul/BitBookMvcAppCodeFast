@using BitBookMvcApp.Models
@model Education

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.Hidden("Id", Model.Id)
        @Html.Hidden("UserId", Model.UserId)

        <div class="form-group">
            @Html.Label("Institute", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("Institute", Model.Institute, new { @class = "form-control", value = Model.Institute })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("From Date", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("FromDate", Model.FromDate, new { @class = "form-control", value = Model.FromDate })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("To Date", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("ToDate", Model.ToDate, new { @class = "form-control", value = Model.ToDate })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Degree", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("Degree", Model.Degree, new { @class = "form-control", value = Model.Degree })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Cancel", "Index")
</div>
