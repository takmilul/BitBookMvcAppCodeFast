@model BitBookMvcApp.Models.Interest

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model=> model.Id)
        @Html.HiddenFor(model=> model.UserId)
        <div class="form-group">
            @Html.LabelFor(model => model.InterestedIn, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.InterestedIn, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.InterestedIn)
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Cancel", "Index")
</div>
