@model BitBookMvcApp.Models.Post
@{
    ViewBag.Title = "Home Page";
    string userName = (string)Session["User"];
    AjaxOptions ajaxOptions = new AjaxOptions
       {
           HttpMethod = "POST",
           UpdateTargetId = "homePost",
           InsertionMode = InsertionMode.InsertAfter
       };
}

<style type="text/css">
    input[type=text],
    input[type=text]:hover,
    input[type=text]:focus,
    input[type=text]:active {
        border: 0;
        outline: none;
        outline-offset: 0;
        overflow: auto;
    }

    textarea {
        border: 0;
        overflow: auto;
        outline-offset: 0;
    }

        textarea:focus {
            outline: none;
        }
</style>

